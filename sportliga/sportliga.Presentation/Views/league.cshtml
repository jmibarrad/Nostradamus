<div class="btn-toolbar">
  
</div>
<div class="panel-body">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <a href="" ng-click="ordenarPor('nombre')">
                        Team Name/s
                    </a>
                    <span class="caret" style="cursor: pointer" ng-click="ordenarPor('-nombre')"></span>
                </th>
                <th style="width: 50px;"></th> 
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="team in FilterTeams">
                <td>{{team.nombre}}</td>
                <td>{{team.id_liga}}</td>
                <td>{{team.active}}</td>
                <td>
                    <a style="color: red" href="" ng-click="editTeam(team.nombre)"><i class=" glyphicon glyphicon-flag"></i></a>
                    <a style="color: yellowgreen" href="" ng-click="editTeam(team.nombre)"><i class=" glyphicon glyphicon-pencil"></i></a>
                    <a style ="color: grey" href="" ng-click="deleteTeam(team.nombre)"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
    
    
        <h2><strong><pre style="color: green; font-size: 20px; text-align: center">In League Duels</pre></strong></h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>StateParam</th>
                    <th>Teams in Match</th>
                    <th>Score</th>
                    <th style="width: 50px;"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="match in matches">
                    <td>{{match.id}}</td>
                    <td>{{match.nombre1}} VS {{match.nombre2}}</td>
                    <td>{{match.resultado}}</td>
                    <td>
                        <a href="" ng-click="activateResul(match.nombre1,match.nombre2)"><i class="glyphicon  glyphicon-eye-close"></i></a>
                        <a href="" ng-click="activateMatchEdit(match.nombre1,match.nombre2)"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a href=""><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>

    <div class="btn-toolbar">

        <button class="btn btn-success" type="button" ng-click="activate()">New Game</button>
        <button class="btn btn-warning" type="button" ng-click="activateNewTeam()">New Team</button>
    </div>

        <div class="row" ng-show="addingTeam">
            <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="addNewTeam()">
                <h3 style="font-family: Garamond; color:#444444; text-align: center">Team´s Name</h3>
                <div class="form-box">
                    <div class="form-group">
                        <input ng-model="NombreEquipo" type="text" class="form-control" placeholder="Team´s name" required />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-info btn-block" type="submit" ng-disabled="!(NombreEquipo)" disabled>Add</button>
                        <button class="btn btn-danger btn-block" type="button" ng-click="cancelTeam()">Cancel</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="row" ng-show="isEditing">
            <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="FinishEditing()">
                <h3 style="font-family: Garamond; color:#444444; text-align: center">Edit Name</h3>
                <div class="form-box">
                    <div class="form-group">
                        <input ng-model="NuevoNombre" type="text" class="form-control" placeholder="Team´s Name" required />
                    </div>
                    <div class="form-group">

                        <button class="btn btn-success btn-block" type="submit">Save</button>
                        <div class="alert alert-danger" role="alert" ng-show="NoNumbers">
                            Error | Only numbers not allowed!
                        </div>
                        <button class="btn btn-danger btn-block" type="button" ng-click="cancelEdit()">Cancel</button>
                    </div>
                </div>
            </form>
        </div>


        <!--MOdify-->

        <div class="row" ng-show="addingMatch">
            <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="addMatch()">
                <h3 style="font-family: Garamond; color:#444444; text-align: center">Add New Game</h3>
                <div class="form-box">
                    <div class="form-group">
                        <input ng-model="name1" type="text" class="form-control" placeholder="Team(1)" required />
                        <input ng-model="name2" type="text" class="form-control" placeholder="Team(2)" required />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block" type="submit">Save</button>
                        <button class="btn btn-danger btn-block" type="button" ng-click="cancelMatch()">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
</div>

<div class="row" ng-show="editResul">
    <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="addResultado()">
        <h3 style="font-family: Garamond; color:#444444; text-align: center">Edit Name</h3>
        <div class="form-box">
            <div class="form-group">
                <input ng-model="newResult" type="text" class="form-control" placeholder="0-0" required />
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block" type="submit">Save</button>
                <button class="btn btn-warning btn-block" type="button" ng-click="cancelResultado()">Cancel</button>
            </div>
        </div>
    </form>
</div>