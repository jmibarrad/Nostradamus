@{
    PageData["title"] = "Nostradamus | Register";
}
<link href="~/Views/Register.css" rel="stylesheet">
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">

<div class="testbox">
    <h1 style="font-family: Lusitana; text-shadow: 1px 2px #b67930">Registration</h1>

    <form class="" ng-submit="register()">
       
        <label id="icon" for="name"><i class="icon-envelope"></i></label>
        <input type="email" name="name" ng-model="user.Email" placeholder="Email" required />
        <label id="icon" for="name"><i class="icon-user"></i></label>
        <input type="text" name="name" ng-model="user.Name" placeholder="Name" required />
        <label id="icon" for="name"><i class="icon-shield"></i></label>
        <input type="password" name="name" ng-model="user.Password" placeholder="Password" required />
        <div class="gender">
            <input type="radio" value="None" id="male" name="gender" checked />
            <label for="male" class="radio" chec>Male</label>
            <input type="radio" value="None" id="female" name="gender" />
            <label for="female" class="radio">Female</label>
        </div>
        <p>By clicking Register, you agree on our <a href="#">terms and condition</a>.</p>
        <button type="submit" class="button">Register</button>
    </form>
</div>